<main class="container main-content">
    <ul class="sections-nav" data-role="sections-nav">
        {{#each nav}}
            <li>
                <a href="#{{this.slug}}">{{this.heading}}</a>
            </li>
        {{/each}}
    </ul>
    {{#each sections.list}}
        {{#with (lookup @root.sections this)}}
            <section id="{{ slug }}">
                <div class="section-header">
                    <h2 class="section-heading">{{ heading }}</h2>
                    {{#if headingLink}}
                        <a href="{{ headingLink.url }}" class="section-heading-link">{{headingLink.text}}</a>
                    {{/if}}
                </div>
                {{> (lookup . 'template') content=content}}
            </section>
        {{/with}}
    {{/each}}
</main>