<ul class="projects-list">
    {{#each content.projects}}
         <li>
            <div class="project-logo">
                <img src="{{ iconUrl this.logo }}" alt="{{ this.title }} logo" loading="lazy">
            </div>
            <div class="project-content">
                <h3 class="project-title">
                    <a href="{{ this.url }}">{{ smartenQuotes this.title }}</a>
                </h3>     
                <div>
                    {{{ smartenQuotes this.description }}}
                    <div class="project-links">
                        <span class="project-source-link">
                            <a href="{{ this.githubUrl }}">GitHub</a>
                        </span>
                    {{#if this.demoUrl}}
                        <span class="project-demo-link"><a href="{{ this.demoUrl }}">Demo</a></span>
                    {{/if}}
                    </div>
                </div>
            </div>
        </li>
    {{/each}}
</ul>